{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://atto.cash/schemas/entity.json",
  "title": "Atto Entity",
  "description": "Schema for Atto entity entry",
  "type": "object",
  "additionalProperties": false,

  "required": [
    "entity",
    "organization",
    "label",
    "description",
    "tags",
    "website"
  ],

  "properties": {
    "entity": {
      "type": "string",
      "description": "Short identifier used to link from other files.",
      "pattern": "^[a-z0-9-]+$",
      "minLength": 1,
      "maxLength": 64
    },

    "organization": {
      "type": "string",
      "description": "Canonical organization identifier (can match 'entity' or be more specific).",
      "minLength": 1,
      "maxLength": 120
    },

    "label": {
      "type": "string",
      "description": "Human-friendly display name.",
      "minLength": 1,
      "maxLength": 120
    },

    "description": {
      "type": "string",
      "description": "Short description of what this entity is.",
      "minLength": 1,
      "maxLength": 300
    },

    "tags": {
      "type": "array",
      "description": "Classification tags for this entity.",
      "items": {
        "type": "string",
        "enum": [
          "VERIFIED",
          "EXCHANGE",
          "SERVICE",
          "INDIVIDUAL"
        ]
      },
      "uniqueItems": true
    },

    "website": {
      "type": "string",
      "description": "Public website for this entity.",
      "format": "uri"
    },

    "addedAt": {
      "type": "string",
      "description": "Date the entry was created (UTC).",
      "format": "date"
    }
  }
}
